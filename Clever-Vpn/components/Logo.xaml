<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Clever_Vpn.components.Logo"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Clever_Vpn.components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <UserControl.Resources>
        <local:RatioToSizeConverter x:Key="RatioConverter" />
    </UserControl.Resources>

    <Image Height="{Binding Ratio, ElementName=Root, Converter={StaticResource RatioConverter}}" 
           Width="{Binding Ratio, ElementName=Root, Converter={StaticResource RatioConverter}}"
           Source="/Assets/icon/logo.svg">
    </Image>
</UserControl>
